<div class="mt-4">
    <h3>THÊM MỚI KHÓA HỌC</h3>

    <form class="mt-4" method="post" action="/courses/store">
    <div class="form-group">
        <label for="name">Tên khóa học</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên">
    </div>
    <div class="form-group">
        <label for="description">Mô tả</label>
        <input type="text" class="form-control" id="description" name="description" placeholder="Nhập mô tả">
    </div>
    <div class="form-group">
        <label for="videoId">Mã video</label>
        <input type="text" class="form-control" id="videoId" name="videoId" placeholder="Nhập mã video">
    </div>
    <div class="form-group">
        <label for="level">Cấp độ</label>
        <input type="text" class="form-control" id="level" name="level" placeholder="Nhập cấp độ">
    </div>
   
    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>

</div>